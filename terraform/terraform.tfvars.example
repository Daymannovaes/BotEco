# Linode API token (required)
# Get from: https://cloud.linode.com/profile/tokens
linode_token = "your-linode-api-token"

# Cluster configuration
cluster_name = "wpp-bot-cluster"
region       = "us-east"  # Options: us-east, us-central, us-west, eu-west, ap-south, etc.
k8s_version  = "1.29"

# Node configuration
# g6-standard-2 = 4GB RAM ($24/month) - for testing
# g6-standard-4 = 8GB RAM ($48/month) - recommended for production
node_type      = "g6-standard-4"
node_count     = 1
max_node_count = 3

# Storage
storage_size_gb = 20

# Tags
tags = ["wpp-bot", "production"]

# Domain (optional)
domain = "yourdomain.com"
