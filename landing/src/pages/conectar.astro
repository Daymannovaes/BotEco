---
import BaseLayout from '../layouts/BaseLayout.astro';
import QRConnect from '../components/QRConnect.astro';
---

<BaseLayout
  title="Conectar WhatsApp - BotEco"
  description="Escaneie o QR code para conectar seu WhatsApp ao BotEco e começar a transformar mensagens em áudios épicos."
>
  <!-- Background -->
  <div class="fixed inset-0 bg-gray-950">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-whatsapp-dark/20 via-transparent to-transparent"></div>
    <div class="absolute inset-0 bg-[linear-gradient(rgba(34,197,94,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(34,197,94,0.02)_1px,transparent_1px)] bg-[size:50px_50px]"></div>
  </div>

  <main class="relative">
    <QRConnect />
  </main>
</BaseLayout>
