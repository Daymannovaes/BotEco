<section class="min-h-screen flex items-center justify-center py-20 px-4">
  <div class="max-w-lg w-full">
    <!-- Card -->
    <div class="bg-gray-900/50 backdrop-blur border border-gray-800 rounded-3xl p-8 sm:p-10 text-center">
      <!-- Logo -->
      <div class="flex justify-center mb-6">
        <div class="w-16 h-16 bg-gradient-to-br from-whatsapp-light to-whatsapp-dark rounded-2xl flex items-center justify-center shadow-xl shadow-whatsapp-light/30">
          <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C6.48 2 2 6.48 2 12c0 1.74.45 3.37 1.23 4.79L2 22l5.35-1.21C8.71 21.55 10.32 22 12 22c5.52 0 10-4.48 10-10S17.52 2 12 2zm0 18c-1.52 0-2.95-.39-4.18-1.08l-.3-.18-3.12.82.83-3.04-.2-.31A7.96 7.96 0 014 12c0-4.41 3.59-8 8-8s8 3.59 8 8-3.59 8-8 8z"/>
            <path d="M16.25 14.15c-.25-.12-1.47-.72-1.69-.81-.23-.08-.39-.12-.56.12-.17.25-.64.81-.79.97-.14.17-.29.19-.54.06-.25-.12-1.05-.39-1.99-1.23-.74-.66-1.23-1.47-1.38-1.72-.14-.25-.02-.38.11-.51.11-.11.25-.29.37-.44.12-.15.17-.25.25-.42.08-.17.04-.31-.02-.44-.06-.12-.56-1.35-.77-1.84-.2-.48-.41-.42-.56-.43-.14-.01-.31-.01-.48-.01-.17 0-.44.06-.67.31-.23.25-.86.85-.86 2.06 0 1.22.89 2.39 1.01 2.56.12.17 1.75 2.67 4.23 3.74.59.26 1.05.41 1.41.52.59.19 1.13.16 1.56.1.48-.07 1.47-.6 1.67-1.18.21-.58.21-1.07.14-1.18-.06-.1-.23-.16-.48-.28z"/>
          </svg>
        </div>
      </div>

      <!-- Title -->
      <h1 class="text-2xl sm:text-3xl font-bold text-white mb-2">
        Conecte seu WhatsApp
      </h1>
      <p class="text-gray-400 mb-8">
        Escaneie o QR code abaixo com seu WhatsApp para começar
      </p>

      <!-- QR Code Placeholder -->
      <div class="bg-white rounded-2xl p-6 mb-8 mx-auto w-fit">
        <div class="w-48 h-48 bg-gray-100 rounded-lg flex items-center justify-center">
          <!-- This will be replaced with actual QR code -->
          <div class="text-center">
            <svg class="w-12 h-12 text-gray-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z" />
            </svg>
            <p class="text-gray-500 text-sm">QR Code</p>
            <p class="text-gray-400 text-xs">Carregando...</p>
          </div>
        </div>
      </div>

      <!-- Instructions -->
      <div class="text-left bg-gray-800/50 rounded-xl p-4 mb-6">
        <h3 class="text-white font-semibold mb-3 flex items-center gap-2">
          <svg class="w-5 h-5 text-whatsapp-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Como conectar:
        </h3>
        <ol class="space-y-2 text-gray-400 text-sm">
          <li class="flex items-start gap-2">
            <span class="bg-whatsapp-dark/30 text-whatsapp-light rounded-full w-5 h-5 flex items-center justify-center text-xs flex-shrink-0 mt-0.5">1</span>
            <span>Abra o WhatsApp no seu celular</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="bg-whatsapp-dark/30 text-whatsapp-light rounded-full w-5 h-5 flex items-center justify-center text-xs flex-shrink-0 mt-0.5">2</span>
            <span>Vá em <strong class="text-white">Configurações</strong> → <strong class="text-white">Aparelhos conectados</strong></span>
          </li>
          <li class="flex items-start gap-2">
            <span class="bg-whatsapp-dark/30 text-whatsapp-light rounded-full w-5 h-5 flex items-center justify-center text-xs flex-shrink-0 mt-0.5">3</span>
            <span>Toque em <strong class="text-white">Conectar um aparelho</strong></span>
          </li>
          <li class="flex items-start gap-2">
            <span class="bg-whatsapp-dark/30 text-whatsapp-light rounded-full w-5 h-5 flex items-center justify-center text-xs flex-shrink-0 mt-0.5">4</span>
            <span>Aponte a câmera para o QR code acima</span>
          </li>
        </ol>
      </div>

      <!-- Status -->
      <div class="flex items-center justify-center gap-2 text-gray-500 text-sm">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-yellow-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-yellow-400"></span>
        </span>
        Aguardando conexão...
      </div>
    </div>

    <!-- Back Link -->
    <div class="mt-6 text-center">
      <a href="/" class="text-gray-400 hover:text-white transition-colors text-sm inline-flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Voltar para a página inicial
      </a>
    </div>
  </div>
</section>
