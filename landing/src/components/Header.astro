---
const navLinks = [
  { href: '#demo', label: 'Demonstração' },
  { href: '#recursos', label: 'Recursos' },
  { href: '#precos', label: 'Preços' },
  { href: '#faq', label: 'FAQ' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-gray-950/80 backdrop-blur-lg border-b border-gray-800">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 group">
        <div class="w-10 h-10 bg-gradient-to-br from-whatsapp-light to-whatsapp-dark rounded-xl flex items-center justify-center shadow-lg shadow-whatsapp-light/20 group-hover:shadow-whatsapp-light/40 transition-shadow">
          <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C6.48 2 2 6.48 2 12c0 1.74.45 3.37 1.23 4.79L2 22l5.35-1.21C8.71 21.55 10.32 22 12 22c5.52 0 10-4.48 10-10S17.52 2 12 2zm0 18c-1.52 0-2.95-.39-4.18-1.08l-.3-.18-3.12.82.83-3.04-.2-.31A7.96 7.96 0 014 12c0-4.41 3.59-8 8-8s8 3.59 8 8-3.59 8-8 8z"/>
            <path d="M16.25 14.15c-.25-.12-1.47-.72-1.69-.81-.23-.08-.39-.12-.56.12-.17.25-.64.81-.79.97-.14.17-.29.19-.54.06-.25-.12-1.05-.39-1.99-1.23-.74-.66-1.23-1.47-1.38-1.72-.14-.25-.02-.38.11-.51.11-.11.25-.29.37-.44.12-.15.17-.25.25-.42.08-.17.04-.31-.02-.44-.06-.12-.56-1.35-.77-1.84-.2-.48-.41-.42-.56-.43-.14-.01-.31-.01-.48-.01-.17 0-.44.06-.67.31-.23.25-.86.85-.86 2.06 0 1.22.89 2.39 1.01 2.56.12.17 1.75 2.67 4.23 3.74.59.26 1.05.41 1.41.52.59.19 1.13.16 1.56.1.48-.07 1.47-.6 1.67-1.18.21-.58.21-1.07.14-1.18-.06-.1-.23-.16-.48-.28z"/>
          </svg>
        </div>
        <span class="text-xl font-bold bg-gradient-to-r from-whatsapp-light to-emerald-400 bg-clip-text text-transparent">
          BotEco
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class="text-gray-300 hover:text-white transition-colors text-sm font-medium"
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- CTA Button -->
      <div class="flex items-center gap-4">
        <a
          href={import.meta.env.PUBLIC_DASHBOARD_URL}
          class="bg-gradient-to-r from-whatsapp-light to-whatsapp-dark hover:from-whatsapp-dark hover:to-whatsapp-light text-white font-semibold px-5 py-2.5 rounded-full text-sm transition-all duration-300 shadow-lg shadow-whatsapp-light/25 hover:shadow-whatsapp-light/40 hover:scale-105"
        >
          Começar Grátis
        </a>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-button"
          class="md:hidden p-2 text-gray-400 hover:text-white"
          aria-label="Menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col gap-2 pt-2">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class="text-gray-300 hover:text-white hover:bg-gray-800/50 px-4 py-2 rounded-lg transition-colors text-sm font-medium"
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </nav>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close menu when clicking on a link
  mobileMenu?.querySelectorAll('a').forEach((link) => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>
