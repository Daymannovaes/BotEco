{
  "name": "wpp-bot",
  "version": "2.0.0",
  "description": "WhatsApp Voice Transformer Bot - Multi-Tenant SaaS Platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:db": "docker-compose up -d postgres",
    "dev:full": "docker-compose up -d && npm run dev",
    "dev:all": "concurrently -n bot,dash,land -c blue,green,magenta \"npm run dev\" \"npm run dev --prefix dashboard\" \"npm run dev --prefix landing\"",
    "db:migrate": "node dist/db/migrate.js",
    "lint": "eslint src --ext .ts",
    "test": "vitest"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "tts",
    "voice",
    "baileys",
    "saas",
    "multi-tenant"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@whiskeysockets/baileys": "^6.7.16",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fluent-ffmpeg": "^2.1.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.11.10",
    "@types/qrcode": "^1.5.5",
    "@types/qrcode-terminal": "^0.12.2",
    "concurrently": "^9.2.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
